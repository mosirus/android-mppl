<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@drawable/background_item_list_barang"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp">

    <ImageView
        android:id="@+id/iv_list_reward"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_list_reward"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:text="@string/dummyname_listReward"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/btnReward_hapus_reward"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete_item_24dp"
        android:layout_marginHorizontal="5dp"/>
    <ImageButton
        android:id="@+id/btnReward_edit_reward"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_edit_item_24dp"
        android:layout_marginHorizontal="5dp"/>

</LinearLayout>