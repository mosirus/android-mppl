<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerKonfirmasiPermintaan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="15dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/konfirmasipermintaan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tglPermintaanAntar"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/titikpertama" />

            <TextView
                android:id="@+id/titikpertama"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_toEndOf="@+id/txt_nama"
                android:text="@string/titikdua"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:text="@string/tanggal"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/titikpertama1" />

            <TextView
                android:id="@+id/titikpertama1"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="86dp"
                android:layout_toEndOf="@+id/txt_nama1"
                android:text="@string/titikdua"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_nama1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:text="@string/email"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/userTelephone"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/titikpertama2" />

            <TextView
                android:id="@+id/titikpertama2"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_toEndOf="@+id/txt_nama2"
                android:text="@string/titikdua"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_nama2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:text="@string/no_telp"
                android:textSize="16sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/form_antar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="6dp"
                android:layout_weight="0.2"
                android:background="@drawable/spinner_style">

                <Spinner
                    android:id="@+id/spinner_jenis_sampah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/jenis_sampah"
                    android:prompt="@string/prompt_jenis_sampah" />
            </FrameLayout>

            <EditText
                android:id="@+id/edtJumlahSampah"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="7dp"
                android:layout_weight="0.31"
                android:background="@drawable/style"
                android:hint="@string/jumlah2"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingStart="2dp"
                android:textColor="@color/tulisan_hijau"
                android:textColorHint="@color/tulisan_hijau"
                tools:ignore="LabelFor,RtlSymmetry" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="7dp"
                android:layout_weight="0.25"
                android:background="@drawable/spinner_style">

                <Spinner
                    android:id="@+id/spinner_satuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/satuan"
                    android:prompt="@string/prompt_satuan_sampah"
                    android:textColor="@color/colorPrimary" />
            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/btn_tambah_form"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/spinner_style"
            android:drawableTop="@drawable/ic_add_black_24dp" />

        <TextView
            android:id="@+id/tv_poin_transaksi_terima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/spinner_style"
            android:padding="8dp"
            android:text="@string/poin"
            android:textColor="@color/tulisan_hijau"
            android:textSize="16sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tolak"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_tolak_style2"
                android:text="@string/btn_tolak_requestreward"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_terima"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/btn_style2"
                android:text="@string/terima"
                android:textColor="@android:color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
