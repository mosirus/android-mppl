<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.ui.home.TukarPoinFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3A7D77"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/SiPahias"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:gravity="center"
            android:layout_marginStart="150dp"
            android:text="@string/tv_tukarpoin"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/image_point"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/poin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="@string/my_point"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/image_point"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:text="@string/start_value_point" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="170sp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ftpbtn_listbarang"
                android:layout_height="match_parent"
                android:layout_width="250dp"
                android:background="@drawable/btn_frag_tukarpoin"
                android:theme="@style/tkrpoinbtnactive"
                android:text="@string/judultp_listbarangkupon"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginHorizontal="5dp"
                />
            <Button
                android:id="@+id/ftpbtn_status"
                android:layout_height="match_parent"
                android:layout_width="120dp"
                android:background="@drawable/btn_frag_tukarpoin_inactive"
                android:theme="@style/tkrpoinbtnactive"
                android:text="@string/status"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:padding="10dp"
                android:layout_marginHorizontal="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvtp_list_barang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_list_barang"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>