<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/profilatas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/edit_event"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gbr_event"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/reduce_reuse_recycle"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSuntingFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tambah_foto"
                android:textColor="@color/bluedark"
                android:textSize="20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:gravity="center">


            <EditText
                android:id="@+id/edit_namaEvent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/style"
                android:gravity="center_vertical"
                android:hint="@string/nama_event"
                android:textColor="@color/colorPrimary"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/date_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_namaEvent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/style"
                android:orientation="horizontal"
                android:padding="7dp">

                <TextView
                    android:id="@+id/picked_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:hint="@string/tanggal_waktu"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/date_picker_toggle_event"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/tombol_toggle_date_picker"
                    android:src="@drawable/ic_event_black_24dp" />

            </FrameLayout>

            <EditText
                android:id="@+id/edit_tempat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_field"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/style"
                android:gravity="center_vertical"
                android:hint="@string/tempat"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_deskripsi"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_below="@id/edit_tempat"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/style"
                android:gravity="top"
                android:hint="@string/deskripsi"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="20sp" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-40dp"
                android:layout_marginEnd="-20dp"
                android:scaleType="fitXY"
                android:scaleX=".7"
                android:scaleY=".7"
                android:visibility="gone" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_deskripsi"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_batal"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/cancel_btn_style"
                    android:text="@string/batal"
                    android:textColor="@android:color/white" />


                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/btn_style"
                    android:text="@string/edit_event"
                    android:textColor="@android:color/white" />




            </androidx.appcompat.widget.LinearLayoutCompat>

            <ProgressBar
                android:id="@+id/pbEditEvent"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
