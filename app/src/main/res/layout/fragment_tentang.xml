<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3A7D77"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SiPahias"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/tentang0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="90dp"
                android:text="@string/tentang"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="@string/pos_pengumpulansampah"
                android:textSize="23sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toStartOf="@id/textView"
                card_view:layout_constraintTop_toBottomOf="@id/textView" />


            <RelativeLayout
                android:id="@+id/tentang1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/item_riwayat"
                android:padding="30dp"
                tools:ignore="MissingConstraints">


                <ImageView
                    android:id="@+id/nav_tentang"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txt_tentang1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang"
                    android:text="@string/gd7"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_tentang11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang1"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang"
                    android:text="@string/nogd7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_tentang12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang11"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang"
                    android:text="@string/jam_tentang"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tentang2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/item_riwayat"
                android:padding="30dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/nav_tentang2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txt_tentang2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang2"
                    android:text="@string/gd9"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_tentang21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang2"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang2"
                    android:text="@string/nogd9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_tentang22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang21"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang2"
                    android:text="@string/jam_tentang"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tentang3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/item_riwayat"
                android:padding="30dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/nav_tentang3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txt_tentang3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang3"
                    android:text="@string/posstpm1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_tentang31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang3"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang3"
                    android:text="@string/nostpm1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_tentang32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang31"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang3"
                    android:text="@string/jam_tentang"
                    android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tentang4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/item_riwayat"
                android:padding="30dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/nav_tentang4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txt_tentang4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang4"
                    android:text="@string/asnazaret"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_tentang41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang4"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang4"
                    android:text="@string/nostpm1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_tentang42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang41"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang4"
                    android:text="@string/jam_tentang"
                    android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tentang5"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/item_riwayat"
                android:padding="30dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/nav_tentang5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txt_tentang5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang5"
                    android:text="@string/asmahanaim"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_tentang51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang5"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang5"
                    android:text="@string/asmahanaim"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_tentang52"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tentang51"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/nav_tentang5"
                    android:text="@string/jam_tentang"
                    android:textSize="15sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:text="@string/kegiatan"
                android:textColor="#294C46"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDaftarEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/item_list_event_user"
                android:layout_marginBottom="70dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>